@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"> <i class="bi bi-plus-circle-fill"></i> Create Villa </a>

		</div>
	</div>



	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Occupancy</th>
				<th>Rate</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Occupancy</td>
					<td>@item.Rate</td>
					<td>
						<a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-success m-1" asp-route-id="@item.Id" > <i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-danger" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i></a>
					</td>

				</tr>
			}
		</tbody>

	</table>









</div>