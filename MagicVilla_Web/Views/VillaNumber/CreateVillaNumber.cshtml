@model MagicVilla_Web.Models.ViewModels.VillaNumberCreateVM



<form asp-action="CreateVillaNumber">
	<br />



	<div class="container p-4 border "> 

		<div class="row-cols-7 ">
			<h1 class="text-primary"> Create Villa Number</h1>
		</div>
		<hr />

		<div class="row">

			<div asp-validation-summary="All" class="text-danger"></div>



			<div class="col-2">
				<label  asp-for="VillaNumber.VillaNo" class="form-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10">
				<input class="form-control" asp-for="VillaNumber.VillaNo" />
				<span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumber.SpecialDetails" class="form-label pt-2" style="font-size:20px;"></label>
			</div>

			<div class="col-10 pb-3">
				<textarea asp-for="VillaNumber.SpecialDetails" class="form-text" cols="150" rows="10"></textarea> 
				<span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
			</div>


			<div class="col-2">
				<label asp-for="VillaNumber.VillaId" class="form-label pt-2" style="font-size:20px;"></label>
			</div>

			<div class="col-5 pb-4">

			<select class="form-select p-3" asp-for="VillaNumber.VillaId" asp-items="Model.VillasMenuList">
				<option disabled selected style="text-align:center">
					<--------------- Select Villa -------------------------->
				</option>
			<span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>

			</select>

			</div>


			<div class="col-5 offset-2">
				<a asp-action="VillaNumberIndex" asp-controller="VillaNumber" class="btn btn-primary form-control">Back To Villa Numbers List</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Create" class="btn btn-success form-control" />
			</div>



		</div>

	</div>

</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}