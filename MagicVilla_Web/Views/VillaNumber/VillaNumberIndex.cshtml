@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa Number List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"> <i class="bi bi-plus-circle-fill"></i> Create Villa Number </a>

		</div>
	</div>



	<table class="table">
		<thead>
			<tr>
				<th>Villa Name</th>
				<th>Villa Number</th>
				<th>Villa Special Details</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Villa.Name</td>
					<td>@item.VillaNo</td>
					<td>@item.SpecialDetails</td>
					<td>
						<a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" class="btn btn-success m-1" asp-route-id="@item.VillaNo"> <i class="bi bi-pencil-square"></i></a>
						<a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" class="btn btn-danger" asp-route-id="@item.VillaNo"> <i class="bi bi-trash3-fill"></i></a>
					</td>

				</tr>
			}
		</tbody>

	</table>









</div>