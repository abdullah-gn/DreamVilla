@model MagicVilla_Web.Models.Dto.VillaNumberDTO



<form asp-action="DeleteVillaNumber">
	<br />



	<div class="container p-4 border ">

		<div class="row-cols-10 ">
			<h1 class="text-primary col-10"> Delete Villa Number</h1>
		</div>
		<hr />

		<div class="row">



			<input asp-for="VillaNo" hidden />
			

			<div class="col-2">
				<label asp-for="SpecialDetails" class="form-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3" >
				<textarea disabled asp-for="SpecialDetails" class="form-text" cols="150" rows="10"></textarea>
			</div>


			<div class="pb-3 ">

				<select asp-for="VillaId" disabled class="form-select p-3">
					<option >@Model.Villa.Name</option>
				</select>

			</div>

			<div class="col-5 offset-2">
				<a asp-action="VillaNumberIndex" asp-controller="VillaNumber" class="btn btn-primary form-control">Back To Villa Numbers List</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-danger form-control" />
			</div>



		</div>

	</div>

</form>
